-- File: DummyForwarder.mesa,  Last Edit: HGM  February 25, 1981  2:00 PMDIRECTORY  StatsDefs USING [StatIncr],  PupRouterDefs USING [],  CommFlags USING [doStats],  BufferDefs USING [PupBuffer, ReturnFreeBuffer];DummyForwarder: PROGRAM IMPORTS StatsDefs, BufferDefs EXPORTS PupRouterDefs =  BEGIN  DontForwardPupBuffer: PUBLIC PROCEDURE [b: BufferDefs.PupBuffer] =    BEGIN    BufferDefs.ReturnFreeBuffer[b];    IF CommFlags.doStats THEN StatsDefs.StatIncr[statPupNotForwarded];    END;  END.