// IfsPressRes.bcpl// Copyright Xerox Corporation 1979// Last modified January 11, 1980  1:07 AM by Boggsget "IfsRs.decl"get "IfsPress.decl"external[// outgoing proceduresPressEvent// incoming proceduresCreateJob; QueueEvent; PressSendCtx// incoming statics@pps]//----------------------------------------------------------------------------let PressEvent(ecb) be//----------------------------------------------------------------------------[if pps>>PPS.timer gr 0 then pps>>PPS.timer = pps>>PPS.timer-1if pps>>PPS.timer eq 0 & pps>>PPS.ctx eq 0 then   pps>>PPS.ctx = CreateJob(PressSendCtx, jobTypePress)QueueEvent(ecb, 100*pressCheckInterval)]